// migrateCommand: npx prisma migrate dev --name init
// second Migrate Command :npx prisma migrate dev --name added_job_title

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  first_name String
  last_name  String
  email      String   @unique
  password   String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

model UserAddress {
  id           Int    @id @default(autoincrement())
  user_id      Int
  country      String
  state        String
  city         String
  street       String
  postal_code  Int
  address_type String
  mobile       BigInt
}

model Product {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  price       Int
  category    String
  image       String
  rating      String
}

model ProductCategory {
  id              Int      @id @default(autoincrement())
  title           String
  parent_category String
  description     String
  created_at      DateTime @default(now())
  updated_at      DateTime @default(now())
}

model Cart {
  id         Int      @id @default(autoincrement())
  user_id    Int
  product_id Int
  quantity   Int
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

model UserPayment {
  id             Int      @id @default(autoincrement())
  user_id        Int
  transaction_id String
  method         String
  status         String
  amount         Int
  created_at     DateTime @default(now())
  updated_at     DateTime @default(now())
}

model Order {
  id         Int      @id @default(autoincrement())
  user_id    Int
  payment_id Int
  total      Int
  status     String
  created_at DateTime @default(now())
}

model OrderHistory {
  id         Int      @id @default(autoincrement())
  order_id   Int
  product_id Int
  qauntity   Int
  created_at DateTime @default(now())
}
